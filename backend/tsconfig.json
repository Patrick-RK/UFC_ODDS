{
  "compilerOptions": {
    "target": "ESNext",             // Use modern JavaScript features
    "module": "CommonJS",           // CommonJS is required for Node.js compatibility
    "moduleResolution": "Node",     // Resolves modules similar to how Node.js does
    "outDir": "./dist",             // Output directory for compiled JavaScript files
    "rootDir": "./src",             // Root directory for TypeScript source files
    "strict": true,                 // Enable all strict type-checking options
    "esModuleInterop": true,        // Allow default imports from CommonJS modules
    "skipLibCheck": true,           // Skip type checking for declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file naming
  },
  "include": ["src/**/*.ts"],       // Include all .ts files in the 'src' directory
  "exclude": ["node_modules"]       // Exclude the 'node_modules' directory
}
